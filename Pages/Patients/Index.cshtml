@page
@model HCAMiniEHR.Pages.Patients.IndexModel

<h2>Patients</h2>

<a asp-page="Create" class="btn btn-primary mb-2">Add Patient</a>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Gender</th>
        <th>Phone</th>
        <th></th>
    </tr>

    @foreach (var p in Model.Patients)
    {
        <tr>
            <td>@p.FullName</td>
            <td>@p.Gender</td>
            <td>@p.Phone</td>
            <td>
                <a asp-page="Edit" asp-route-id="@p.PatientId">Edit</a> |
                <a asp-page="Delete" asp-route-id="@p.PatientId">Delete</a>
            </td>
        </tr>
    }
</table>
