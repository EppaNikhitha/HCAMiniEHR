<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HCAMiniEHR</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-page="/Index">
                    🏥 HCAMiniEHR
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Patients/Index">Patients</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Appointments/Index">Appointments</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-page="/LabOrders/Index">Lab Orders</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Reports</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/Reports/PendingLabOrders">Pending Labs</a></li>
                                <li><a class="dropdown-item" asp-page="/Reports/PatientsWithoutFollowUp">No Follow-up</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="bg-primary text-white text-center p-3 mt-4">
        HCAMiniEHR © 2026 — Patient Management System
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
