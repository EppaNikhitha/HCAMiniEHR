@page
@model HCAMiniEHR.Pages.Appointments.CreateModel

<h2>Add Appointment</h2>

<form method="post">
    <div>
        <label>Patient</label>
        <select asp-for="Appointment.PatientId" asp-items="Model.PatientList" class="form-control"></select>
    </div>

    <div>
        <label>Date</label>
        <input asp-for="Appointment.AppointmentDate" type="date" class="form-control" />
    </div>

    <div>
        <label>Reason</label>
        <input asp-for="Appointment.Reason" class="form-control" />
    </div>

    <button class="btn btn-primary mt-2">Save</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Back</a>
</form>
